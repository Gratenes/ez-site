{
  "ts-node": {
    "files": true
  },
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": [
      "es6",
      "dom"
    ],
    "sourceMap": true,
    "outDir": ".", // This is a bad fix for views file not carrying over issue
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "declaration": false,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
  },
  "include": [
    "src/",
    "src/index.ts",
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
